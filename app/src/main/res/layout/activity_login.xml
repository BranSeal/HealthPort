<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGreyPrimary"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/loginText"
        android:layout_width="240dp"
        android:layout_height="105dp"
        android:layout_marginEnd="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="72dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="92dp"
        android:gravity="center"
        android:text="@string/login_to_healthport"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/lightGreyAccent"
        android:textSize="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/emailView"
        android:layout_width="291dp"
        android:layout_height="55dp"
        android:layout_marginEnd="47dp"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="47dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="56dp"
        android:textColorHint="@color/lightGreyAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginText">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/lightGreyAccent" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/passwordView"
        android:layout_width="291dp"
        android:layout_height="50dp"
        android:layout_marginEnd="47dp"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="47dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="29dp"
        android:textColorHint="@color/lightGreyAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailView">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/password"
            style="?android:attr/actionBarTabBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/lightGreyAccent" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/email_sign_in_button"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginEnd="118dp"
        android:layout_marginLeft="116dp"
        android:layout_marginRight="118dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/rounded_button"
        android:onClick="login"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginText" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="171dp"
        android:layout_marginLeft="170dp"
        android:layout_marginRight="171dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="25dp"
        android:onClick="cancel"
        android:text="Cancel"
        android:textColor="@color/lightGreyAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_sign_in_button" />



</android.support.constraint.ConstraintLayout>
